<configuration debug="false">

  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
    </encoder>
  </appender>

  <logger name="org.jboss.resteasy" level="INFO"/>
  <logger name="org.reflections.Reflections" level="INFO"/>
  <logger name="org.apache.pdfbox.pdmodel.font.PDTrueTypeFont" level="ERROR"/>
  <logger name="com.jayway.jsonpath" level="INFO"/>
  <logger name="org.hibernate" level="INFO"/>
  <logger name="net.qldarch.hibernate" level="INFO"/>
  <logger name="net.qldarch.db" level="INFO"/>
  <logger name="net.qldarch.security.AuthFilter" level="INFO"/>

  <root level="debug">
    <appender-ref ref="STDOUT" />
  </root>

</configuration>
